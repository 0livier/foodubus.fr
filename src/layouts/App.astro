---
import { SEO } from "astro-seo";
import config from "$config";
import { canonicalPath } from "$utils/canonical-url";

interface Props {
	title: string;
	subtitle?: string;
	description: string;
	author?: string;
	article?: {
		timestamp: Date;
		section?: string;
		tags?: string[];
		mainEntityOfPage?: string;
		image?: string;
	};
}

const { title, subtitle, description, author, article } = Astro.props;

const canonicalPathname = canonicalPath(Astro.url.pathname);
const canonicalUrl = new URL(canonicalPathname, Astro.site);
const siteUrl = Astro.site?.toString() ?? canonicalUrl.origin;

const pageTitle = subtitle ?? title;
const ogLocale = Astro.currentLocale?.replace(/-(\w+)/, (_, region: string) => `_${region.toUpperCase()}`);
const ogImageUrl = (article ? new URL(`${canonicalPathname}/graph.png`, Astro.site) : new URL("graph.png", Astro.site)).toString();

// WebSite JSON-LD (all pages) – from site config
const websiteJsonLd = {
	"@context": "https://schema.org",
	"@type": "WebSite",
	name: title,
	url: siteUrl,
	description: config.description,
	inLanguage: Astro.currentLocale ?? config.i18n.defaultLocale
};

// BlogPosting JSON-LD (article pages only) – from note/jotting content
const blogPostingJsonLd =
	article &&
	article.mainEntityOfPage &&
	article.image &&
	subtitle
		? {
				"@context": "https://schema.org",
				"@type": "BlogPosting",
				headline: subtitle,
				description,
				url: article.mainEntityOfPage,
				mainEntityOfPage: {
					"@type": "WebPage",
					"@id": article.mainEntityOfPage
				},
				image: {
					"@type": "ImageObject",
					url: article.image
				},
				datePublished: article.timestamp.toISOString(),
				dateModified: article.timestamp.toISOString(),
				author: {
					"@type": "Person",
					name: author ?? config.author.name
				},
				publisher: {
					"@type": "Organization",
					name: title,
					logo: {
						"@type": "ImageObject",
						url: new URL("graph.png", Astro.site).toString()
					}
				}
			}
		: null;

// Locale-specific Noto Serif font mappings for Google Fonts
const notoFonts: Record<string, string> = {
	fr: "https://fonts.googleapis.com/css2?family=Noto+Serif:ital,wght@0,400;0,700;1,400;1,700&display=swap"
};
---

<html lang={Astro.currentLocale} dir={["ar", "he", "fa", "ur"].includes(Astro.currentLocale!) ? "rtl" : "ltr"}>
	<head>
		<SEO
			title={pageTitle}
			titleTemplate={`%s | ${title}`}
			titleDefault={title}
			description={description}
			canonical={canonicalUrl.toString()}
			charset="utf-8"
			openGraph={{
				basic: {
					title: subtitle ? `${subtitle} | ${title}` : title,
					type: article ? "article" : "website",
					image: ogImageUrl,
					url: canonicalUrl.toString()
				},
				optional: {
					description,
					siteName: title,
					locale: ogLocale
				},
				image: {
					alt: title,
					width: 1200,
					height: 630
				},
				...(article && {
					article: {
						publishedTime: article.timestamp.toISOString(),
						authors: [author ?? config.author.name],
						...(article.section && { section: article.section }),
						...(article.tags?.length && { tags: article.tags })
					}
				})
			}}
			twitter={{ card: "summary_large_image" }}
		/>

		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />

		<link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="shortcut icon" href="/favicon.ico" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="manifest" href="/site.webmanifest" />

		<link rel="sitemap" href="/sitemap-index.xml" />

		<link rel="preconnect" href="https://fontsapi.zeoseven.com" />
		<link rel="dns-prefetch" href="https://cdnjs.cloudflare.com" />

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Great+Vibes&family=Special+Elite&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Playwrite+MX:wght@100&display=block" />
		<link href="https://fonts.googleapis.com/css2?family=Source+Sans+3:ital,wght@0,200..900;1,200..900&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="https://fontsapi.zeoseven.com/442/main/result.css" crossorigin />
		<link rel="stylesheet" href="https://fontsapi.zeoseven.com/556/main/result.css" crossorigin />

		{Astro.currentLocale && notoFonts[Astro.currentLocale] && <link rel="stylesheet" href={notoFonts[Astro.currentLocale]} />}

		<script type="application/ld+json" set:html={JSON.stringify(websiteJsonLd)} />
		{blogPostingJsonLd && (
			<script type="application/ld+json" set:html={JSON.stringify(blogPostingJsonLd)} />
		)}

		<script is:inline>
			var theme = localStorage.getItem("theme");
			if (theme) document.documentElement.dataset.theme = theme;
		</script>
	</head>
	<body>
		<slot />
	</body>
</html>
